<h1>Posts</h1>


<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Author</th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <% if logged_in? %>
        <td><%= author(post) %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>  