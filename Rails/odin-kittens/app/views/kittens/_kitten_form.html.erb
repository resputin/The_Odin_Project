<%= form_for @kitten do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.number_field :age, in: 0.0..20.0 %>

  <%= f.label :cuteness %>
  <%= f.number_field :cuteness, in: 0.0..10.0 %>

  <%= f.label :softness %>
  <%= f.number_field :softness, in: 0.0..10.0 %>

  <%= f.submit %>
<% end %>